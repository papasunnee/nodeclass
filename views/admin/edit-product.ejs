<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/product.css" />
</head>
<body>
    <%- include('../includes/navigation.ejs')%>
    <main>
      <form class="product-form" action="/admin/<% if (editing) { %>edit-product <% } else { %>add-product <% } %>" method="POST">
        <div class="form-control">
          <label for="title">Title</label>
          
          <input required type="text" name="title" id="title" value="<% if (editing) { %> <%= product.title %> <% } %>" />
        </div>
        <div class="form-control">
          <label for="imageURL">ImageURL</label>
          <input required type="text" name="imageURL" id="imageURL" value="<% if (editing) { %> <%= product.imageURL %> <% } %>" />
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input required type="number" name="price" id="price" step="0.01" value="<% if (editing) { %><%= product.price %><% } %>" />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" cols="" rows="5"><% if (editing) { %> <%= product.description %> <% } %></textarea>
        </div>
        
        <% if (editing) { %> 
            <input required type="hidden" name="productId" id="productId" value="<%= product.id %>" />
        <% }  %> 

        <button class="btn" type="submit">
            <% if (editing) { %> Update <% } else {  %> Add <% } %> Product
        </button>
      </form>
    </main>

<%- include('../includes/end.ejs')%>